@model Manufacturer

@{
    var action = ViewContext.RouteData.Values["action"].ToString().Capitalize();

    ViewData["Title"] = $" | {action} Category";
}

<h1>@action Manufacturer</h1>

<form asp-action="@action" asp-area="Admin" method="post">

    <input type="hidden" asp-for="ManufacturerId" />

    <input type="hidden" name="Operation" value="@action" />

    @if (Operation.IsDelete(action))
    {
        <div class="col-sm-4"><label>@Model.Name</label></div>
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="Address" />
    }
    else
    {
        <div class="form-group row">
            <div class="col-sm-2"><label>Name:</label></div>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"><label>Address:</label></div>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.Address" class="form-control" />
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-4 offset-sm-2">
            <button type="submit" class="btn btn-primary">@action</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
