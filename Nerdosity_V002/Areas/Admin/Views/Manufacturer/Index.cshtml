@model IEnumerable<Manufacturer>

@{
    ViewData["Title"] = " | Manage Manufacturers";
}

<h1 class="mb-2">Manage Manufacturers</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a manufacturer</a></h5>
    </li>
    <li class="list-group-item">
        <form asp-action="Select" method="post" class="form-inline">
            <h5 class="mt-1 mr-5">Select a manufacturer</h5>
            <select name="id" class="form-control ml-2 mr-2"
                    asp-items='@new SelectList(Model, "ManufacturerId", "Name")'></select>
            <input type="submit" name="Operation" value="View Products"
                   class="btn btn-primary ml-2 mr-2" />
            <input type="submit" name="Operation" value="Edit"
                   class="btn btn-primary ml-2 mr-2" />
            <input type="submit" name="Operation" value="Delete"
                   class="btn btn-primary ml-2 mr-2" />
        </form>
    </li>
</ul>
